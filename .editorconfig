# editorconfig.org

root = true

[{*, .*}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 120

[{**.md,**.json}]
max_line_length = off

[{*.json,.eslintrc,.prettierrc,jest.config}]
indent_size = 2
